{
  "rulesDirectory": [
    "node_modules/codelyzer"
  ],
  "rules": {
    "arrow-return-shorthand": true, //建议将 () => { return x; } 转为 () => x 的方式
    "callable-types": true, //只有一个调用签名的接口或文字类型可以作为函数类型编写，如（test:{text:string}）=> { }
    "class-name": true, //类名
    "comment-format": [ //对注释执行格式化规则。
      true,
      "check-space"
    ],
    "curly": true, //检测 if/for/do/while 嵌套
    "deprecation": { //对引用过期的api进行警告
      "severity": "warn" //警告
    },
    "eofline": true, //确保文件的结尾是新的一行（必须有换行符）
    "forin": true, //for in 循环内部必须有一个 if 判断是否存key
    "import-blacklist": [ //不允许直接导入的模块黑名单
      true,
      "rxjs",
      "rxjs/Rx"
    ],
    "import-spacing": true, //确保导入语句关键字之间的空格。
    "indent": [ //用制表符或空格执行缩进。
      true,
      "spaces"
    ],
    "interface-over-type-literal": true, //接口上要有文字声明
    "label-position": true, //只允许标签用在 do/for/while/switch 语句中
    "max-line-length": [ //为了便于阅读，限制每行最长的字符数
      true,
      140
    ],
    "member-access": false, //类成员不必标识访问方式，如 public private protected 关键字
    "member-ordering": [ //类成员属性必须按照一定的顺序声明
      true,
      {
        "order": [
          "static-field",
          "instance-field",
          "static-method",
          "instance-method"
        ]
      }
    ],
    "no-arg": true,
    "no-bitwise": true,
    "no-console": [
      true,
      "debug",
      "info",
      "time",
      "timeEnd",
      "trace"
    ],
    "no-construct": true,
    "no-debugger": true,
    "no-duplicate-super": true,
    "no-empty": false,
    "no-empty-interface": true,
    "no-eval": true,
    "no-inferrable-types": [
      true,
      "ignore-params"
    ],
    "no-misused-new": true,
    "no-non-null-assertion": true,
    "no-shadowed-variable": true,
    "no-string-literal": false,
    "no-string-throw": true,
    "no-switch-case-fall-through": true,
    "no-trailing-whitespace": true,
    "no-unnecessary-initializer": true,
    "no-unused-expression": true,
    "no-use-before-declare": true,
    "no-var-keyword": true,
    "object-literal-sort-keys": false,
    "one-line": [
      true,
      "check-open-brace",
      "check-catch",
      "check-else",
      "check-whitespace"
    ],
    "prefer-const": true,
    "quotemark": [
      true,
      "single"
    ],
    "radix": true,
    "semicolon": [
      true,
      "always"
    ],
    "triple-equals": [
      true,
      "allow-null-check"
    ],
    "typedef-whitespace": [
      true,
      {
        "call-signature": "nospace",
        "index-signature": "nospace",
        "parameter": "nospace",
        "property-declaration": "nospace",
        "variable-declaration": "nospace"
      }
    ],
    "unified-signatures": true,
    "variable-name": false,
    "whitespace": [
      true,
      "check-branch",
      "check-decl",
      "check-operator",
      "check-separator",
      "check-type"
    ],
    "directive-selector": [
      true,
      "attribute",
      "app",
      "camelCase"
    ],
    "component-selector": [
      true,
      "element",
      "app",
      "kebab-case"
    ],
    "no-output-on-prefix": true,
    "use-input-property-decorator": true,
    "use-output-property-decorator": true,
    "use-host-property-decorator": true,
    "no-input-rename": true,
    "no-output-rename": true,
    "use-life-cycle-interface": true,
    "use-pipe-transform-interface": true,
    "component-class-suffix": true,
    "directive-class-suffix": true
  }
}